<h4>{{title}}</h4>
<div class="row border rounded py-2 px-5 mb-3">
  {{#if pelicula}}
    <div class="col-12 mt-3">
      <div class="alert alert-success text-center">
        <h5>{{pelicula}}</h5>
      </div>
    </div>
  {{/if}}

  <div class="col-xl-4 col-lg-4 col-md-5 col-sm-12 col-12 my-4 text-center">
    <h5>{{data.name}}</h5>
    <div class="_card" style="width:250px; height: 350px;">
      <div class="_card_image"> <img src="{{data.url}}" /> </div>
    </div>
  </div>
  <form class="col-xl-8 col-lg-8 col-md-7 col-sm-12 col-12 my-4" method="post" action="">
    <input type="hidden" id="id_pelicula" name="id_pelicula" value="{{data._id}}">
    <div class="form-group">
      <label>Nombre: </label>
      <input type="text" class="form-control" value="{{data.name}}" id="name" name="name">
    </div>
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <label>Año:</label>
          <input type="text" class="form-control" value="{{data.year}}" id="year" name="year">
        </div>
      </div>
      <div class="col-6">
          <div class="form-group">
            <label>Género:</label>
            <input type="text" class="form-control" value="{{data.gender}}" id="gender" name="gender">
          </div>
      </div>
    </div>
    <div class="form-group">
      <label>Director:</label>
      <input type="text" class="form-control" value="{{data.director}}" id="director" name="director">
    </div>
    <div class="form-group">
      <label>Productor:</label>
      <input type="text" class="form-control" value="{{data.producer}}" id="producer" name="producer">
    </div>
    <div class="form-group">
      <label>Url imagen:</label>
      <input type="text" class="form-control" value="{{data.url}}" id="url" name="url">
    </div>
    {{#unless pelicula}}
      <button type="submit" name="button" class="btn btn-success pull-right">Editar información</button>
    {{/unless}}
  </form>
</div>
