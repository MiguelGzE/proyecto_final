<h4>{{title}}</h4>

{{#if mostrar}}
  <div class="row border rounded py-2 px-5 mb-3">
    <div class="col-12 my-4 text-center">
      <h5>{{data.name}}</h5>
      <div class="_card" style="width:230px; height: 330px;">
        <div class="_card_image"> <img src="{{data.url}}" /> </div>
      </div>
      <form class="" action="" method="post">
        <input type="hidden" name="id_pelicula" value="{{data._id}}">
        <button type="submit" name="button" class="btn btn-danger btn-lg">Eliminar pel√≠cula</button>
      </form>
    </div>
  </div>
{{/if}}

{{#if eliminada}}
  <div class="row border rounded py-2 px-5 mb-3">
    <div class="col-12 my-4 text-center">
      <div class="alert alert-info p-5">
        <h5>{{eliminada}}</h5>
      </div>
    </div>
  </div>
{{/if}}
